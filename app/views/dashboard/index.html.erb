<div class="bg-white rounded-lg shadow p-6 mb-6">
  <h1 class="text-2xl font-bold mb-4">Dashboard</h1>
  
  <% if @active_time_entry %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <strong>Timer Running:</strong> <%= @active_time_entry.description %>
      <br>
      <small>Started: <%= @active_time_entry.start_time.strftime("%I:%M %p") %></small>
    </div>
  <% end %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <!-- Organizations -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold">Your Organizations</h2>
      <%= link_to "New Organization", new_organization_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
    
    <% if @organizations.any? %>
      <% @organizations.each do |org| %>
        <div class="border-b py-2 last:border-b-0">
          <%= link_to org.name, org, class: "text-blue-600 hover:underline font-medium" %>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-500">No organizations yet. Create one to get started!</p>
    <% end %>
  </div>

  <!-- Recent Time Entries -->
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-xl font-semibold mb-4">Recent Time Entries</h2>
    
    <% if @recent_time_entries.any? %>
      <% @recent_time_entries.each do |entry| %>
        <div class="border-b py-2 last:border-b-0">
          <div class="font-medium"><%= entry.description %></div>
          <div class="text-sm text-gray-600">
            <%= entry.project.name %> â€¢ 
            <% if entry.end_time %>
              <%= entry.duration_in_hours.round(2) %> hours
            <% else %>
              <span class="text-green-600">In Progress</span>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-500">No time entries yet.</p>
    <% end %>
  </div>
</div>
