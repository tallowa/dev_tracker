<div class="bg-white rounded-lg shadow p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Organizations</h1>
    <%= link_to "New Organization", new_organization_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>

  <% if @organizations.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @organizations.each do |org| %>
        <div class="border rounded-lg p-4 hover:shadow-md transition-shadow">
          <h3 class="font-semibold text-lg mb-2"><%= org.name %></h3>
          <p class="text-gray-600 text-sm mb-3">
            <%= pluralize(org.projects.count, 'project') %> â€¢ 
            <%= pluralize(org.users.count, 'member') %>
          </p>
          <%= link_to "View", org, class: "text-blue-600 hover:underline" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <p class="text-gray-500 mb-4">You're not part of any organizations yet.</p>
      <%= link_to "Create Your First Organization", new_organization_path, class: "bg-blue-500 text-white px-6 py-3 rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>
